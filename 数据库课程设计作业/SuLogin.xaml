<Window x:Class="数据库课程设计作业.SuLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:数据库课程设计作业"
        mc:Ignorable="d"
        Title="#sudo su:_" Height="323" Width="500" WindowStyle="ToolWindow" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image DockPanel.Dock="Top" Source="/sulogo.jpeg" Width="100" Margin="5,5,5,5"/>
            <TextBlock DockPanel.Dock="Top" Foreground="Red" FontFamily="华文行楷" FontSize="25" Text="威海地方铁路有限公司" TextAlignment="Center" Margin="5,5,5,5"/>
            <WrapPanel DockPanel.Dock="Top" Margin="5,5,5,5">
                <Label Content="超级用户密码："/>
                <PasswordBox x:Name="pwdSu" Width="100"/>
            </WrapPanel>
            <Button x:Name="btnSu" DockPanel.Dock="Top" Content="以ROOT身份登录" Margin="5,5,5,5" Click="btnSu_Click"/>
            <Button x:Name="btnBack" DockPanel.Dock="Top" Content="返回用户态" Margin="5,5,5,5" Click="btnBack_Click"/>
        </DockPanel>
    </Grid>
</Window>
